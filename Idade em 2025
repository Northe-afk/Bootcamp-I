#include<stdio.h>
#include<locale.h>
#include<math.h>

//Faça um programa que peça o ano de nascimento e mostra a idade do usuário no fim de 2025 e o ano que esse usuário fez ou fará 50 anos.
int main() {
    setlocale(LC_ALL, "Portuguese");
    //Pedir dados
    int ano_nascimento, idade, ano_50anos;
    printf("Digite o ano de nascimento: ");
    scanf("%d", &ano_nascimento);

    //Idade 2025
    idade = 2025 - ano_nascimento;


    //Ano de 50
    ano_50anos = ano_nascimento + 50;

    //Mostrar resultados
    printf("Idade em 2025: %d\n", idade);
    if (ano_50anos > 2025) {
        printf("Ano que fará 50 anos: %d\n", ano_50anos);
    } else {
        printf("Ano que fez 50 anos: %d\n", ano_50anos);
    
    };



    return 0;
}
